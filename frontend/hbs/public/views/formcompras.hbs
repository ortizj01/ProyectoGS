<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nueva compra</title>
    {{> header}}
</head>
<body class="  ">
        <!-- Inicio del cargar -->
    <div id="loading">
      <div class="loader simple-loader">
          <div class="loader-body">
          </div>
      </div>    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->

        {{> sidebar}}    
 
    <!-- Fin Barra lateral -->


    <!-- Inicio Barra superior -->
        {{> topbar}}
    <!-- Fin Barra superior -->

              
    <!-- Inicio contenido -->      
<div class="container-fluid content-inner">
            <div class="row">                
                <div class="col-sm-12 col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Agregar Compra</h4>
                        </div>
                        </div>
                        <div class="card-body">
                            
                                    <form id="formCompra">
                                    <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Fecha compra*</label>
                                            <input type="date" class="form-control" name="fechaCompra" placeholder="Fecha compra" id="fechaCompra"/>
                                            <div id="errorFechaCompra" class="error-message"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Valor compra*</label>
                                            <input type="number" class="form-control" name="valorCompra" placeholder="Valor compra" id="valorCompra"/>
                                            <div id="errorValorCompra" class="error-message"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">numero Recibo Compra*</label>
                                            <input type="number" class="form-control" name="numeroReciboCompra" placeholder="Valor compra" id="numeroReciboCompra"/>
                                            <div id="errornumeroReciboCompra" class="error-message"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label" for="idProveedores">Proveedor *</label>
                                            <select class="form-select" id="idProveedores" name="dia">
                                            <option selected="" disabled="">Selecciona el Proveedor</option>
                                            <option value="1">Gluta stack</option>
                                            <option value="2">Smart Gainer</option>
                                            <option value="3">Protigh</option>
                                            <option value="4">Nutra lageno</option>
                                            <option value="5">Gluta</option>
                                            <option value="6">Stack</option>
                                            </select>
                                        </div>
                                    </div>
                                        
                                    <!-- inicio -->
                                    
                                        
                                        <label for="selectProducto">Selecciona un producto:</label>
                                        <div class="productoContainer">
                                        <select id="selectProducto" name="productos[]" style="width:300px">
                                            <option selected="" disabled="">Agregar producto a la compra</option>
                                            <option value="1">Creatina</option>
                                            <option value="2">Aminoacidos</option>
                                            <option value="3">Elite</option>
                                            <option value="4">Agua</option>
                                            <!-- Agrega más opciones según tus necesidades -->
                                        </select>

                                        <label  for="cantidad" style="margin-left:50px" >Cantidad:</label>
                                        <input style="width:90px" type="number"  name="cantidades[]" value="1" min="1" required>


                                        <label  for="Valor" style="margin-left:50px" >Valor:</label>
                                        <label  for="Valor" > $ 25.000</label>
                                        <div class="productoContainer">
                                        <button type="button" class="btn btn-soft-info mt-2" onclick="agregarProducto()"style="margin-left:50px"><i class="fa-solid fa-plus fa-lg"></i></button>
                                        </div>
                                        </div>
                                        

                                        <div id="productosAgregados">
                                            
                                            <!-- Aquí se agregarán dinámicamente los nuevos campos de selección -->
                                            
                                        </div>

                                    <!-- fin -->
                                    

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="form-label">Valor de la compra</label>
                                            <label class="form-label">$ 58.000</label>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" name="next" onclick="enviarCompra()" class="btn btn-primary next action-button float-end" value="Next" >Guardar</button>
                                <button type="button" name="previous" class="btn btn-dark previous action-button-previous float-end me-1" value="Previous" >Cancelar</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    <!-- Fin contenido --> 

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> copyright}}
    </footer>
    <!-- Footer Section End -->
    <script src="../assets/js/Compras.js"></script>


    {{> footer}}
</body>
</html>