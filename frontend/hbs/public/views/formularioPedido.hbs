<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario Pedido</title>
    {{> header}}
</head>
<body class="  ">
        <!-- Inicio del cargar -->
    <div id="loading">
      <div class="loader simple-loader">
          <div class="loader-body">
          </div>
      </div>    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->

        {{> sidebar}}    
 
    <!-- Fin Barra lateral -->


    <!-- Inicio Barra superior -->
        {{> topbar}}
    <!-- Fin Barra superior -->

              
    <!-- Inicio contenido -->      
        <div class="container-fluid content-inner">
         <div class="row">                
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Agregar pedido</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="Formulariopedido">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">ID Cliente:</label>
                                        <input type="text" class="form-control" name="Nombrepedido" placeholder="Nombre completo" oninput="validateNombre(this)" />
                                        <span class="error-message" id="nombre-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Metodo de pago</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">EFECTIVO</option>
                                            <option value="CedulaExtranjeria">QR</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Categoria productos</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">PPROTEINAS</option>
                                            <option value="CedulaExtranjeria">AMINOASIDOS</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Categoria servicios</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">MEMBRESIAS</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Estado Pedido</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">PAGADO</option>
                                            <option value="CedulaExtranjeria">ENTREGADO</option>
                                             <option value="CedulaExtranjeria">PENDIENTE DE PAGO</option>
                                              <option value="CedulaExtranjeria">DEVUELVO</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Servicios</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">MEMBRECIA PLUS</option>
                                            <option value="CedulaExtranjeria">MEMBRECIA PLATINO</option>
                                             <option value="CedulaExtranjeria">MEMBRECIA BRONCE</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="tipoDocumento">Productos</label>
                                        <select id="tipoDocumento" name="tipoDocumento">
                                            <option value="CedulaCiudadania">PROTEINA PLUS</option>
                                            <option value="CedulaExtranjeria">PROTEINA ULTRA POWER</option>
                                             <option value="CedulaExtranjeria">PROTEINA ULTRA POWER MASTER</option>
                                        </select>
                                        <span class="error-message" id="tipoDocumento-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Número de documento:</label>
                                        <input type="text" class="form-control" name="Documentopedido" placeholder="Número de documento" oninput="validateDocumento(this)" />
                                        <span class="error-message" id="Documentopedido-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Correo electrónico:</label>
                                        <input type="text" class="form-control" name="correopedido" placeholder="Correo electrónico" oninput="validateCorreo(this)" />
                                        <span class="error-message" id="correo-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Dirección:</label>
                                        <input type="text" class="form-control" name="direccionpedido" placeholder="Dirección" oninput="validateDireccion(this)" />
                                        <span class="" id="direccion-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Contacto:</label>
                                        <input type="text" class="form-control" name="contactopedido" placeholder="Contacto" oninput="validateContacto(this)" />
                                        <span class="error-message" id="contacto-error"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" name="Guardar" class="btn btn-primary next action-button float-end" value="Next">Guardar</button>
                            <button type="button" name="Cancelar" class="btn btn-dark previous action-button-previous float-end me-1" value="Previous">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Fin contenido --> 

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> copyright}}
    </footer>
    <!-- Footer Section End -->

    {{> footer}}
</body>
</html>