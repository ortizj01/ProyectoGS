<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nueva Rutina</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/css/stylesRutinas.css">
    <link rel="stylesheet" href="../assets/css/validacionesForms.css" />
    {{> header}}
</head>
<body>
    <!-- Inicio del cargar -->
    <div id="loading">
        <div class="loader simple-loader">
            <div class="loader-body"></div>
        </div>
    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->
    {{> sidebar}}
    <!-- Fin Barra lateral -->

    <!-- Inicio Barra superior -->
    {{> topbar}}
    <!-- Fin Barra superior -->

    <!-- Inicio contenido -->
    <form class="formularioRegistro" id="formularioRegistro">
        <div class="container-fluid content-inner">
            <div class="row">                
                <div class="col-sm-12 col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Nueva Rutina</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-card text-start">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group formularioRegistro__grupo" id="grupo__nombreRutina">
                                            <div class="formularioRegistro__grupo-input">
                                                <label class="formularioRegistro__label">Nombre Rutina*</label>
                                                <input type="text" class="form-control" name="nombreRutina" placeholder="Nombre" />
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formularioRegistro__input-error">Ingrese el nombre de la rutina correctamente</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group formularioRegistro__grupo" id="grupo__idUsuario">
                                            <div class="formularioRegistro__grupo-input">
                                                <label class="formularioRegistro__label">Usuario*</label>
                                                <select class="form-control" name="idUsuario" id="idUsuario">
                                                    <option value="">Seleccione un usuario</option>
                                                </select>
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formularioRegistro__input-error">Seleccione un usuario</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="container mt-5">
                                    <div class="d-flex justify-content-center mb-3">
                                        <!-- Botones para seleccionar los días -->
                                        <button type="button" class="mx-2 day-button" data-day="lunes">Lunes</button>
                                        <button type="button" class="mx-2 day-button" data-day="martes">Martes</button>
                                        <button type="button" class="mx-2 day-button" data-day="miercoles">Miércoles</button>
                                        <button type="button" class="mx-2 day-button" data-day="jueves">Jueves</button>
                                        <button type="button" class="mx-2 day-button" data-day="viernes">Viernes</button>
                                        <button type="button" class="mx-2 day-button" data-day="sabado">Sábado</button>
                                        <button type="button" class="mx-2 day-button" data-day="domingo">Domingo</button>
                                    </div>

                                    <div class="form-container">
                                        <!-- Formulario de ejercicios se generará dinámicamente aquí -->
                                    </div>
                                </div>

                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <button type="submit" name="next" class="btn btn-primary float-end">Guardar</button>
                                        <a href="rutinas" class="btn btn-dark me-2 float-end">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Fin contenido -->

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> copyright}}
    </footer>
    <!-- Footer Section End -->
    <!-- Validaciones rutinas -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/js/rutinas.js"></script>
    <script src="../assets/js/validacionRutinas.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="../assets/js/rutinas/formRutinas.js"></script>
    {{> footer}}
</body>
</html>
