    <!-- Inicio contenido -->      <form class="formularioRegistro" id="formularioRegistro">
<div class="container-fluid content-inner">
    <div class="row">                
        <div class="col-sm-12 col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Nueva Rutina</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-card text-start">
                    
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group formularioRegistro__grupo" id="grupo__nombreRutina">
                                    <div class="formularioRegistro__grupo-input" >
                                    <label class="nombreRutina" class="formularioRegistro__label">Nombre Rutina*</label>
                                    <input type="text" class="form-control" name="nombreRutina" placeholder="Nombre" />
                                    <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                    </div>
                                        <p class="formularioRegistro__input-error">Ingrese el nombre de la rutina correctamente</p>
                                </div>
                            </div>

</form>

                                <div class="form-group ">
                                    <br>
                                    <br>
                                    <label class="form-label">Selecciones los dias*</label>
                                </div> 
                            <div class="col-md-12 mt-3">
                                <div id="diasSemana">
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Lunes">
                                        Lunes <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Martes">
                                        Martes <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Miercoles">
                                        Miércoles <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Jueves">
                                        Jueves <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Viernes">
                                        Viernes <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Sabado">
                                         Sábado <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <i class="btn btn-soft-dark me-2 dia-btn" data-dia="Domingo">
                                         Domingo <i class="fas fa-chevron-down"></i>
                                    </i>
                                    <!-- ... resto de los botones para los días ... -->

                                    <!-- Formulario oculto para cada día -->
                                
                                     <div class="form-dia shadow p-3 mb-5 bg-body rounded me-2" data-dia="Lunes" style="display: none;">
                                                <form>
                                                    <div class="row mb-3">
                                                        <div class="col-md-4">
                                                            <label for="ejercicio" class="col-form-label">Ejercicio</label>
                                                            <select class="form-select" id="ejercicio">
                                                                <option value="pecho">Seleccione el ejercicio</option>
                                                                <option value="pecho">Pecho</option>
                                                                <option value="espalda">Espalda</option>
                                                                <option value="piernas">Piernas</option>
                                                                <!-- Agrega más opciones según sea necesario -->
                                                            </select>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group formularioRegistro__grupo" id="grupo__tipoEjercicio">
                                                                <div class="formularioRegistro__grupo-input" >
                                                                <label class="tipoEjercicio" class="formularioRegistro__label">Tipo Ejercicio</label>
                                                                <input type="text" class="form-control" name="tipoEjercicio" placeholder="Nombre" />
                                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                                                </div>
                                                                    <p class="formularioRegistro__input-error">Ingrese el nombre del Tipo Ejercicio correctamente</p>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4 d-flex align-items-center">
                                                            <div class="form-group formularioRegistro__grupo" id="grupo__repeticiones">
                                                                <div class="formularioRegistro__grupo-input" >
                                                                <label class="repeticiones" class="formularioRegistro__label">Repeticiones</label>
                                                                <input type="number" class="form-control" name="repeticiones" style="width: 100px;"/>
                                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                                                </div>
                                                                    <p class="formularioRegistro__input-error">Ingrese el dato correctamente</p>
                                                            </div>

                                                                <button type="button" class="btn btn-soft-info ms-2 add-field">
                                                                    <i class="fa-solid fa-plus fa-lg"></i>
                                                                </button>
                                                        </div>
                                                     </div>
                                                </form>
                                            </div>
                                            <p class="formularioRegistro__input-error">Ingrese el nombre de la rutina correctamente</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group formularioRegistro__grupo" id="grupo__idUsuario">
                                            <div class="formularioRegistro__grupo-input">
                                                <label class="formularioRegistro__label">Usuario*</label>
                                                <select class="form-control" name="idUsuario" id="idUsuario">
                                                    <option value="">Seleccione un usuario</option>
                                                </select>
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formularioRegistro__input-error">Seleccione un usuario</p>
                                        </div>
                                    </div>
                                    <div class="row"> 
                                        <div class="col-md-4" id="estadoRutinaContainer" style="display:none;">
                                            <div class="form-group formularioRegistro__grupo">
                                                <div class="formularioRegistro__grupo-input">
                                                    <label class="formularioRegistro__label">Estado Rutina</label>
                                                    <select class="form-control" name="estadoRutina">
                                                        <option value="1">Activa</option>
                                                        <option value="0">Inactiva</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                </div>
                                <div class="container mt-5">
                                    <div class="d-flex justify-content-center mb-3">
                                        <!-- Botones para seleccionar los días -->
                                        <button type="button" class="mx-2 day-button" data-day="lunes">Lunes</button>
                                        <button type="button" class="mx-2 day-button" data-day="martes">Martes</button>
                                        <button type="button" class="mx-2 day-button" data-day="miercoles">Miércoles</button>
                                        <button type="button" class="mx-2 day-button" data-day="jueves">Jueves</button>
                                        <button type="button" class="mx-2 day-button" data-day="viernes">Viernes</button>
                                        <button type="button" class="mx-2 day-button" data-day="sabado">Sábado</button>
                                        <button type="button" class="mx-2 day-button" data-day="domingo">Domingo</button>
                                    </div>

                                            {{!-- FIN MARTES --}}


                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <button type="submit" name="next" class="btn btn-primary float-end">Guardar</button>
                                <a href="rutinas" class="btn btn-dark me-2 float-end">Cancelar</a>
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>


 
       
    
