                              <form class="formularioRegistro" id="formularioRegistro">
                                 <div class="row">
                                    
                                    {{!-- Campo Nombres --}}
                                    <div class="col-lg-6 formularioRegistro__grupo" id="grupo__nombres">
                                       <label for="nombres" class="formularioRegistro__label">Nombres *</label>
                                          <div class="formularioRegistro__grupo-input" >
                                             <input type="text" class="form-control" name="nombres" id="nombres">                             
                                             <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                          </div>
                                          <p class="formularioRegistro__input-error">Los nombres no puede contener numeros o caracteres especiales</p>
                                    </div>

                                    {{!-- Campo Apellidos --}}
                                    <div class="col-lg-6 formularioRegistro__grupo" id="grupo__apellidos">
                                       <label for="apellidos" class="formularioRegistro__label">Apellidos *</label>
                                          <div class="formularioRegistro__grupo-input" >
                                             <input type="text" class="form-control" name="apellidos" id="apellidos">                             
                                             <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                          </div>
                                          <p class="formularioRegistro__input-error">Los apellidos no puede contener numeros o caracteres especiales</p>
                                    </div>

                                    {{!-- <div class="col-lg-6 formularioRegistro__grupo" id="grupo__tipoDocumento">
