                                </select>
                                <div>
                                    <a href="formularioBeneficiario"><button type="button" class="btn btn-soft-info btn mt-2"><i
                                                class="fa-solid fa-plus fa-lg"></i> Beneficiario</button></a>
                                </div>

                                <select id="selectServicio" name="servicios[]" class="form-control" style="width: 300px;" required>
                                    <option selected disabled>Seleccinar membresia</option>
                                    <option value="servicio1">Membresía Premium</option>
                                    <option value="servicio2">Membresía Básica</option>
                                </select>

                                <div class="form-group formularioRegistro__grupo" id="grupo__cantidad">
                                    <label for="cantidadServicio" class="cantidad formularioRegistro__label">Cantidad:</label>
                                    <input type="number" class="form-control" id="cantidadServicio" name="cantidades[]" value="1" min="1" style="width: 90px;">
                                    <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                </div>

                                <div class="form-group formularioRegistro__grupo" id="grupo__valor">
                                    <label for="valor" class="cantidad formularioRegistro__label">Valor:</label>
                                    <label class="ms-2">$50.000</label>
                                </div>

                                <button type="button" class="btn btn-soft-info mt-2" onclick="agregarServicio(document.getElementById('serviciosAgregadosContainer'))">
                                    <i class="fa-solid fa-plus fa-lg"></i>
                                </button>
                            </div>
                            <div id="serviciosAgregadosContainer" class="mt-2">
                                <!-- Aquí se agregarán dinámicamente los nuevos campos de selección -->
                            </div>
                        </div>
                        <!-- Fin de bloque de servicios -->

                        <div class="col-md-6">
