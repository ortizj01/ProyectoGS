<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plantilla</title>

    <!-- Cargar archivos CSS necesarios, si los tienes -->

    <!-- Cargar el script getServicios.js -->
    <script src="getServicios.js"></script>
</head>
<body>

<!-- Incluir tu header, sidebar, topbar u otros componentes según tu diseño -->
{{> header}}
{{> sidebar}}
{{> topbar}}

<!-- Contenido principal -->
<div class="container-fluid content-inner">
    <div class="container-fluid">
        <!-- Botón para agregar servicio en el lado izquierdo -->
        <a href="formServicios" class="btn btn-primary btn-sm mb-3">
            <i class="fa-regular fa-plus fa-xs me-1"></i> Agregar Servicio
        </a>

        <!-- Card para mostrar los servicios -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h3 class="m-0 font-weight-bold text-primary">Gestión de Servicios</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre Clase</th>
                                <th>Instructor</th>
                                <th>Costo Venta</th>
                                <th>Estado</th>
                                <th>Acciones</th> <!-- Nueva columna para botones -->
                            </tr>
                        </thead>
                        <tbody id="dataTableBody">
                            <!-- Aquí se agregarán las filas de datos -->
                            <!-- Ejemplo de una fila de datos -->
                            <tr>
                                <td>Yoga</td>
                                <td>Juan Pérez</td>
                                <td>$50</td>
                                <td>Activo</td>
                                <td>
                                    <!-- Botón para ver detalles -->
                                    <a href="detalleServicio?id=1" class="btn btn-primary btn-sm me-1">
                                        <i class="fa-regular fa-eye fa-xs"></i>
                                    </a>
                                    <!-- Botón para editar -->
                                    <a href="formServicio?id=1" class="btn btn-info btn-sm me-1">
                                        <i class="fa-regular fa-pen-to-square fa-xs"></i>
                                    </a>
                                    <!-- Botón para eliminar -->
                                    <button type="button" class="btn btn-danger btn-sm me-1" data-bs-toggle="modal" data-bs-target="#eliminarServicioModal" data-id="1">
                                        <i class="fa-solid fa-trash fa-xs"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> 
    </div>
</div>
<!-- Fin del contenido principal -->

<!-- Modal para confirmar eliminar servicio -->
<div class="modal fade" id="eliminarServicioModal" tabindex="-1" aria-labelledby="eliminarServicioModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="m-0 font-weight-bold text-primary">Eliminar servicio</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="eliminarServicioForm">
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>
                            ¿Seguro que deseas eliminar el servicio?
                        </div>
                    </div>
                    <button type="submit" id="confirmarEliminar" class="btn btn-primary">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Fin del contenido principal -->
<script src="../assets/js/postServicios.js"></script>

<!-- Incluir footer y otros componentes finales -->
<footer class="footer">
    {{> copyright}}
</footer>
<!-- Footer Section End -->

{{> footer}}
<!-- Scripts adicionales, si es necesario -->

</body>
</html>
